<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/tvMedicineTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:ellipsize="end"
                android:fontFamily="@font/sharp_sans_medium"
                android:maxLines="1"
                android:text="@string/txt_medicine"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tvTypeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:ellipsize="end"
                android:fontFamily="@font/sharp_sans_medium"
                android:maxLines="1"
                android:text="@string/txt_type"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tvFrequencyTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:ellipsize="end"
                android:fontFamily="@font/sharp_sans_medium"
                android:maxLines="1"
                android:text="@string/txt_frequency"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tvDoseTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:ellipsize="end"
                android:fontFamily="@font/sharp_sans_medium"
                android:maxLines="1"
                android:text="@string/txt_dose"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tvDayTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:ellipsize="end"
                android:fontFamily="@font/sharp_sans_medium"
                android:maxLines="1"
                android:text="@string/txt_days"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:fontFamily="@font/sharp_sans_medium"
                android:maxLines="1"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_6sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDropDownParent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/bg_white_with_gray_border"
            android:orientation="horizontal"
            android:weightSum="6">

            <RelativeLayout
                android:id="@+id/rlMedicine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

                <EditText
                    android:id="@+id/etMedicine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="@font/sharp_sans_reg"
                    android:gravity="left|center_vertical"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="@string/txt_medicine"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/_5sdp" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:id="@+id/rlType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivType"
                    android:ellipsize="end"
                    android:fontFamily="@font/sharp_sans_reg"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/_5sdp" />

                <ImageView
                    android:id="@+id/ivType"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_down_arrow_gry"
                    android:backgroundTint="@color/colorPrimary" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:id="@+id/rlFrequency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/tvFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivFrequency"
                    android:ellipsize="end"
                    android:fontFamily="@font/sharp_sans_reg"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/_5sdp" />

                <ImageView
                    android:id="@+id/ivFrequency"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_down_arrow_gry"
                    android:backgroundTint="@color/colorPrimary" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:id="@+id/rlDose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/tvDose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivDose"
                    android:fontFamily="@font/sharp_sans_reg"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/_5sdp" />

                <ImageView
                    android:id="@+id/ivDose"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_down_arrow_gry"
                    android:backgroundTint="@color/colorPrimary" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:id="@+id/rlDay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/tvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivDay"
                    android:ellipsize="end"
                    android:fontFamily="@font/sharp_sans_reg"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/_5sdp" />

                <ImageView
                    android:id="@+id/ivDay"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/ic_down_arrow_gry"
                    android:backgroundTint="@color/colorPrimary" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@color/red">

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_prescription_remove" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>