<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/llOldPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOldPass"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/sharp_sans_medium"
            android:gravity="center_vertical"
            android:text="@string/txt_old_password"
            android:textAllCaps="true"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/_6sdp" />

        <EditText
            android:id="@+id/etOldPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_white_with_gray_border"
            android:fontFamily="@font/sharp_sans_reg"
            android:gravity="center|left"
            android:hint="@string/txt_type_old_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_hint"
            android:textSize="@dimen/_5sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewPass"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/sharp_sans_medium"
            android:gravity="center_vertical"
            android:text="@string/txt_new_password"
            android:textAllCaps="true"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/_6sdp" />

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_white_with_gray_border"
            android:fontFamily="@font/sharp_sans_reg"
            android:gravity="center|left"
            android:hint="@string/txt_type_new_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_hint"
            android:textSize="@dimen/_5sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRetypeNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRetypeNewPass"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/sharp_sans_medium"
            android:gravity="center_vertical"
            android:text="@string/txt_retype_password"
            android:textAllCaps="true"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/_6sdp" />

        <EditText
            android:id="@+id/etRetypeNewPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_white_with_gray_border"
            android:fontFamily="@font/sharp_sans_reg"
            android:gravity="center|left"
            android:hint="@string/txt_retype_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_hint"
            android:textSize="@dimen/_5sdp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnChangePassUpdate"
        style="@style/BgButton"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/txt_update"
        android:textSize="@dimen/_6sdp" />

</LinearLayout>